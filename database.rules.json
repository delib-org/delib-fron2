{
  "rules": {
    ".read": "auth !== null",
    ".write": "auth !== null",

    "groups": {
      ".indexOn": "pubtype",
      "$group_id": {
        "owner": {
          ".write": "data.val() == auth.uid"
        },
        "subEntities":{
           ".indexOn": "dateAdded"
        }
      }
    },
    "users": {
      ".read": "auth !== null",
      ".write": false,
      "$user_id": {
        ".write": "$user_id === auth.uid"
      }
    },
    "chats":{
      "$chat":{
        "messages":{
          ".indexOn": "dateAdded"
        }
      }
    },
    "questions":{
      "$question":{
        "subEntities":{
          ".indexOn": "dateAdded"
        }
      }
    }
  }
}
